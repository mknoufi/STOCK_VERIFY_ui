# Stock Verification System - Environment Configuration
# Copy this file to .env and fill in values
# NEVER commit .env to version control

# ===========================================
# Application Settings
# ===========================================

# Environment: development | staging | production
ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=DEBUG

# ===========================================
# Authentication & Security
# ===========================================

# JWT secret key for token signing (min 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=

# JWT token expiration in hours
JWT_EXPIRATION_HOURS=24

# Session secret for cookies
SESSION_SECRET=

# ===========================================
# MongoDB Configuration
# ===========================================

# Full MongoDB connection URI
# Format: mongodb://username:password@host:port/database
MONGO_URL=mongodb://localhost:27017/stock_verification

# MongoDB root credentials (for Docker setup)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=

# ===========================================
# SQL Server Configuration (ERP - READ ONLY)
# ===========================================

# SQL Server hostname or IP
SQL_SERVER_HOST=your-erp-server.local

# SQL Server port (default: 1433)
SQL_SERVER_PORT=1433

# SQL Server database name
SQL_SERVER_DATABASE=ERP_Database

# SQL Server credentials (READ-ONLY user)
SQL_SERVER_USER=stock_readonly_user
SQL_SERVER_PASSWORD=

# ODBC driver name
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server

# ===========================================
# Redis Configuration (Optional)
# ===========================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis password (if authentication enabled)
REDIS_PASSWORD=

# ===========================================
# API Configuration
# ===========================================

# Backend host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# Number of workers for production
WORKERS=4

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# ===========================================
# Monitoring & Observability
# ===========================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Sentry environment
SENTRY_ENVIRONMENT=development

# Prometheus metrics enabled
METRICS_ENABLED=true

# ===========================================
# External Services (Optional)
# ===========================================

# Email notification settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# ===========================================
# Feature Flags
# ===========================================

# Enable offline mode support
FEATURE_OFFLINE_MODE=true

# Enable real-time sync via WebSocket
FEATURE_REALTIME_SYNC=true

# Enable audit logging
FEATURE_AUDIT_LOG=true

# ===========================================
# Development Only
# ===========================================

# Enable debug endpoints (NEVER in production)
DEBUG_ENDPOINTS=true

# Enable hot reload
HOT_RELOAD=true

# Skip authentication for testing
# WARNING: NEVER enable in production
SKIP_AUTH=false
